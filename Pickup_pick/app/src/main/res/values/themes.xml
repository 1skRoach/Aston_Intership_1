<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PickUp_pic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/grey</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/grey</item>
        <item name="android:elevation">8dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/PopupTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationStyle</item>
    </style>

    <style name="ToolbarNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/black</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>